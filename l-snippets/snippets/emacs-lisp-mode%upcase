<------alias
uc upcase
<------modes
all
<------keywords
<------environment

<------snippet
${1:downcase$(lambda (ov after-p)
  (if after-p
      (let ((text (l-snippets-overlay-get-text ov)))
        (mapc
         (lambda(x)
           (l-snippets-overlay-update-text x (upcase text)))
         (overlay-get ov 'mirrors)))))} 
upcase:$1

upcase  :: $1 $0
downcase:: ${1$(lambda(mo pri)
      (l-snippets-overlay-update-text 
       mo (downcase (l-snippets-overlay-get-text pri))))}
